<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BuyerProductActivity"
    android:orientation="vertical">

    <include
        layout="@layout/buyertool"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1.Which would you want to purchase? "
        android:textSize="24dp"
        android:padding="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="4dp"
        android:textStyle="bold"
        />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vegetables"
        android:textSize="19dp"
        android:layout_marginLeft="30dp"
        />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fruits"
        android:textSize="19dp"
        android:layout_marginLeft="30dp"
        />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dairy Products"
        android:textSize="19dp"
        android:layout_marginLeft="30dp"
        />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rice"
        android:textSize="19dp"
        android:layout_marginLeft="30dp"
        />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Maize"
        android:textSize="19dp"
        android:layout_marginLeft="30dp"
        />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Beans"
        android:textSize="19dp"
        android:layout_marginLeft="30dp"
        />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Farm inputs"
        android:textSize="19dp"
        android:layout_marginLeft="30dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Other?"
            android:textSize="19dp"
            android:layout_marginLeft="30dp"
            />
        <EditText
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:textStyle="bold"
            android:textSize="17dp"
            android:hint="Please specify"
            android:background="@drawable/line"/>
    </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@color/blueish"
        android:textColor="@color/white"
        android:text="Continue"
        android:layout_marginTop="43dp"
        android:layout_marginLeft="40dp"
        android:textStyle="bold"
        android:textSize="19dp"/>



</LinearLayout>