<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SupplierActivity"
    android:orientation="vertical"
    >
    <include layout="@layout/toolbar"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1."
            android:layout_marginLeft="10dp"
            android:textSize="19dp"/>
    <AutoCompleteTextView
        android:id="@+id/supplier_product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Input Product Name"
        android:inputType="text"
        android:textSize="19dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/line"
        android:padding="10dp"
        android:completionThreshold="1"
        android:drawableLeft="@drawable/ic_baseline_search_24"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2."
            android:textSize="19dp"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload Photo   "
            android:textSize="19dp"
            android:layout_marginLeft="10dp"
            />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:id="@+id/TakePicture"
        android:background="@drawable/ic_baseline_photo_camera_24"
        />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <ImageView
        android:id="@+id/photo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@mipmap/ic_launcher"/>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3."
            android:textSize="19dp"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Product Description"
            android:textSize="19dp"
            />
    </androidx.appcompat.widget.LinearLayoutCompat>


    <EditText
    android:id="@+id/seller_description"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="eg weight"
    android:background="@drawable/line"
    android:padding="5dp"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="30dp"

    />
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4."
            android:textSize="19dp"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   Price"
            android:textSize="19dp"
            />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <EditText
        android:id="@+id/price_seller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="20dp"
        android:inputType="text"
        android:background="@drawable/line"
        android:hint="Ksh..."
        android:padding="5dp" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5."
            android:textSize="19dp"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   Areas Targetted"
            android:textSize="19dp"
            />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <AutoCompleteTextView
        android:id="@+id/supplier_target"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line"
        android:hint="county..."
        android:layout_marginRight="20dp"
        android:inputType="text"
        android:layout_marginLeft="30dp"
        android:padding="5dp"
        android:completionThreshold="1"
        />
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6."
            android:textSize="19dp"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   Phone Number"
            android:textSize="19dp"
           />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <EditText
        android:id="@+id/phonenumber_seller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line"
        android:layout_marginRight="20dp"
        android:inputType="text"
        android:hint="+254..."
        android:layout_marginLeft="30dp"
        android:padding="5dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="180dp"
        android:background="@drawable/btn"
        android:text="sell PRODUCT"
        android:textSize="16dp"
        android:id="@+id/sell_maps"
        />





</LinearLayout>